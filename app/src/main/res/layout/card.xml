<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:background="@drawable/gradient">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation ="horizontal"
            android:padding="6dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/notastitulos"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Nota 1  • Nota 2 • Nota 3 • Nota 4 • Nota 5 • Nota 6 • Nota 7 • Nota 8 • Nota 9 • Nota 10 Nota 1 "
                android:textColor="@color/gris"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/product_sans_regular"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/ubicaciontitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notastitulos"
                android:text="Casa"
                android:textSize="24dp"
                android:fontFamily="@font/product_sans_regular"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/notasnumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ubicaciontitulo"
                android:text="10 notas"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/product_sans_regular"/>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>